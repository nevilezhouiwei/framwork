<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--导入属性配置-->
    <properties resource="generator.properties"></properties>
    <!-- 数据库驱动jar路径 -->
    <classPathEntry location="${jdbc.driverLocation}"/>

    <context id="context1">
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 1：注释构建;type-可通过实现CommentGenerator接口构建自定义的注释构建类 -->
        <commentGenerator type="com.nevile.system.utils.MyCommentGenerator"></commentGenerator>

        <!--		<commentGenerator >
                    &lt;!&ndash; 是否去除自动生成的注释；true:是；false:否 &ndash;&gt;
                    <property name="suppressAllComments" value="true" />
                </commentGenerator>-->

        <!-- 2：数据库连接信息 -->
        <!--		<jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"-->
        <!--			connectionURL="jdbc:oracle:thin:@(DESCRIPTION =(ADDRESS = (PROTOCOL = TCP)(HOST = 127.0.0.1)(PORT = 1521))(CONNECT_DATA =(SERVER = DEDICATED)(SERVICE_NAME = orcl)))"-->
        <!--			userId="springframwork" password="springframwork">-->
        <!--		</jdbcConnection>-->
        <!-- mysql连接方式 -->
        <jdbcConnection driverClass="${jdbc.driverClass}" connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}" password="${jdbc.password}"></jdbcConnection>
        <!-- 3：生成实体类地址 -->
        <javaModelGenerator targetPackage="com.nevile.app.login.entity"
                            targetProject="src\main\java">
        </javaModelGenerator>

        <!-- 4.生成map.xml地址 -->
        <sqlMapGenerator targetPackage="mapper.app.login"
                         targetProject="src\main\resources">
        </sqlMapGenerator>

        <!-- 5.生成DAO地址 -->
        <javaClientGenerator targetPackage="com.nevile.app.login.dao"
                             type="XMLMAPPER" targetProject="src\main\java">
        </javaClientGenerator>

        <!-- 配置表信息 -->
        <table tableName="t_user" domainObjectName="User"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false">
        </table>
    </context>
</generatorConfiguration>
